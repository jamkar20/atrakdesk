{
  "plugins": ["angular"],
  "extends": ["eslint:recommended", "angular"],
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "no-console": "off",
    "angular/angularelement": "off",
    "angular/controller-as": "off",
    "angular/controller-name": "off",
    "quotes": ["error", "single"],
    "curly": ["error", "multi-or-nest"],
    "complexity": ["error", 20],
    "wrap-iife": ["error", "outside"],
    "semi": ["error", "always"],
    "no-extra-semi": "error",
    "no-func-assign": "error",
    "no-redeclare": "error"
  },
  "globals": {
    "angular": 1,
    "define": 1,
    "requirejs": 1,
    "History": 1
  }
}